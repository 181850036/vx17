<view class="main">
<MyTitile></MyTitile>
<view class="nav_wrap">
   <scroll-view class="nav">
       <view bindtap="activeNav" data-index="{{index}}"
        class="nav_item {{index===currentIndexNav?'active':''}}" 
        wx:for="{{navList}}" wx:key="index">
       {{item.type}}
       </view>
   </scroll-view>
</view>
<view class="video_warp">
   <navigator url="../details/details?id={{item._id}}" class="video_item" wx:for="{{Films}}" wx:key="index">
       <!--left-->
       <view class="video_img">
          <image src="{{item.pic}}" ></image>
       </view>
       <!--right-->
       <view class="video_info">
          <view class="video_detail">
               <text class="video_name">
               {{item.name}}</text>
               <text class="video_points" >
               {{item.points}}</text>
          </view>
          <view class="video_intro">{{item.intro}}</view>
       </view>
     </navigator>
</view> 

</view>


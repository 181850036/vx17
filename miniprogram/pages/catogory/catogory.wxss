.page{
  color:#888;
}


.nav{
  padding:10rpx;
  border-bottom:1rpx solid #000;
}
.nav_item{
  padding: 20rpx;
  font-size:40rpx;
  display: inline-block;
  
}
.nav_item.active{
  color:#666;
  border-bottom: 10rpx solid rgba(240, 232, 6, 0.829);
}
.video_wrap{
  margin-top: 10rpx;
}

.video_item{
  margin-bottom: 10rpx;
  padding:10rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #666;
}

.video_img{
  width: 40%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.video_img image{
  width: 90%;
  height: 300rpx;
  border-radius: 15rpx;
}
.video_info{
  width: 60%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.video_name{
  font-size: 35rpx;
  font-weight: bolder;
  color: #000;
}
.video_points{
  font-size: 24rpx;
  color: #666;
}
.video_intro{
  font-size:30rpx;
  display: -webkit-box;
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}


<view class="user_bg">
  <view class="user_un" wx:if="{{!openid}}">
    <button open-type="getUserInfo" lang="zh_CN"
    bindgetuserinfo="onGotUserInfo">登录</button>
  </view>
</view>


 <block wx:for="{{collection}}" wx:key="key">
    <view class="user_on" wx:if="{{openid}}">
      <view class="user_img">
        <image class="image" src="{{userInfo.avatarUrl}}"></image>
      </view>
    </view>
    <view class="user_info">
      <text>{{userInfo.nickName}}</text>
    </view>
 
    <view class="collection-item">
    电影id：{{item.videoId}} 收藏时间：{{item.date}}
    </view>
</block>


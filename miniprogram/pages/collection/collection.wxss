.image {
  width: 100px;
  height: 100px;
  margin: 0 auto;
  display: block;
  padding-top:20px;
}
.avatar{
  height: 100px;
  width: 100px;
  border: 2px solid white;
  border-radius: 50%;
  margin-top: 50px;
  z-index: 3;
}
.background {
  width: 100%;
  height: 100%;
  position:fixed; 
  background-size:100% 100%;
  z-index: -1;
  filter: blur(5rpx);
}
.name {
  text-align: center;
  padding-top:8px;
  font-size:medium;
  font-weight: 600;
  color: rgb(0, 0, 0);
}

button{
  background-color: yellow;
  width: 50%;
  margin-top: 50px;
}
